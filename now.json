{
  "version": 2,
  "env": {
    "ON_VERCEL": "true"
  },
  "builds": [
    {
      "src": "source/api/index.js",
      "use": "@now/node"
    },
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/now-builder"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "dest": "/api" },
    { "source": "/api", "dest": "/api" },
    { "source": "/(.*)", "dest": "$1" }
  ]
}
